@using MVC_CV.Models.Entity
@model IEnumerable<TBLYETENEKLERIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string renk = "";
}
<h2>Yetenek Listesi</h2>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YetenekEkle" class="btn btn-primary">Yetenek Ekle</a> <br /> <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th> Sil   </th>
                                            <th>   Düzenle </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TBLYETENEKLERIM item in Model)
                                        {
                                            if (item.ORAN >= 0 && item.ORAN <= 50)
                                            {
                                                renk = "progress-bar bg-danger";

                                            }
                                            else if (item.ORAN >= 51 && item.ORAN <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                            }
                                            else if (item.ORAN >= 71 && item.ORAN < 85)
                                            {
                                                renk = "progress-bar bg-primary";
                                            }
                                            else
                                            {
                                                renk = "progress-bar bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.YETENEK</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.ORAN%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge @renk">@item.ORAN%</span></td>
                                                <td><a class="btn btn-info btn-sm" href="/Yetenek/YetenekSil/@item.ID"><i class="fas fa-pencil-alt"></i> Sil</a> </td>
                                                <td><a href="/Yetenek/YetenekGuncelle/@item.ID" class="btn btn-default  btn-sm"><i class="fas fa-trash"></i> Düzenle</a></td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

