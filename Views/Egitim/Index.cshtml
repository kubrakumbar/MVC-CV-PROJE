@using MVC_CV.Models.Entity
@model IEnumerable<TBLEGITIMLERIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>Tarih</th>
        <th>GNO</th>
    </tr>
    @foreach (TBLEGITIMLERIM item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.BASLIK</td>
            <td>@item.ALTBASLIK</td>
            <td>@item.ALTBASLIK2</td>
            <td>@item.GNO</td>
            <td>@item.TARIH</td>
            <td><a href="/Egitim/EgitimSil/@item.ID" class="btn btn-success">Sil</a></td>
            <td><a href="/Egitim/EgitimGetir/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Eğitim Ekle</a>

