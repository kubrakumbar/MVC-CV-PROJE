@using MVC_CV.Models.Entity
@model TBLADMIN
@{
    ViewBag.Title = "AdminEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Ekle</h2>

@using (Html.BeginForm("AdminEkle", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.KULLANICIADI, "Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.KULLANICIADI, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SIFRE, "Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.SIFRE, new {@type="password", @class = "form-control" })

        </div>
    </div>
 
    <button type="submit" class="btn btn-primary">Kullanıcı Ekle</button>
}