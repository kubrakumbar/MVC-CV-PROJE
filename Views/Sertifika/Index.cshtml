@using MVC_CV.Models.Entity
@model IEnumerable<TBLSERTIFIKALARIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <a href="/Sertifika/SertifikaEkle/" class="btn btn-primary" >Yeni Sertifika </a>
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (TBLSERTIFIKALARIM item in Model)
                                    {


                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGuncelle/@item.ID" class="btn btn-success" style="color:white;">
                                               @item.TARIH
                                            </a>
                                        </div> 
                                        <div>
                                
                                            <div class="timeline-item">

                                                <div class="timeline-body">
                                                    @item.ACIKLAMA
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                </div>*@
                                            </div>
                                        </div>
                                    }
                                    <!-- END timeline item -->

                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
</body>
</html>

