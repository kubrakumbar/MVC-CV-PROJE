@using MVC_CV.Models.Entity
@model TBLSERTIFIKALARIM

@{
    ViewBag.Title = "SertifikaGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 

<h2>Sertifika Guncelle</h2>

@using (Html.BeginForm("SertifikaGuncelle", "Sertifika", FormMethod.Post, new { id = "deneyimEkleme" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.ID, "ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ID, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ACIKLAMA, "Açıklama", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ACIKLAMA, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TARIH, "Tarih", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TARIH, new { @class = "form-control" })

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Sertifika Güncelle</button>
    <br />
    <br />
    <a href="/Sertifika/SertifikaSil/@Model.ID" class="btn btn-primary">Sertifika Sil</a>
}