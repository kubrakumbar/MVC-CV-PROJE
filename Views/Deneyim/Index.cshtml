@using MVC_CV.Models.Entity
@model IEnumerable<TBLDENEYIMLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
    </tr>
    @foreach (TBLDENEYIMLER item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.BASLIK</td>
            <td>@item.ALTBASLIK</td>
            <td>@item.TARIH</td>
            <td><a href="/Deneyim/DeneyimSil/@item.ID" class="btn btn-success">Sil</a></td>
            <td><a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekles</a>
